<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="true">

    <android.support.v7.widget.RecyclerView
        android:minWidth="25dp"
        android:minHeight="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainRecycler"
        xmlns:tools="http://schemas.android.com/tools"
        tools:listitem="@layout/audio_item"/>

    <generalapps.vocal.RecorderCircle
        android:id="@+id/recordProgress"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:hapticFeedbackEnabled="false"
        custom:donut_progress="0"
        custom:donut_text_size="60dp"
        custom:donut_inner_bottom_text="Play/Record"
        custom:donut_inner_bottom_text_size="10dp"
        custom:donut_max="4"/>

    <generalapps.vocal.ColorView
        android:id="@+id/blackTint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="invisible"/>
</RelativeLayout>